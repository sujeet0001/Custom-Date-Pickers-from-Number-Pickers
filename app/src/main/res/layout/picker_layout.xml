<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:np_dividerColor="@color/colorAccent"
        app:np_dividerThickness="@dimen/d3"
        app:np_formatter="@string/npf"
        app:np_selectedTextSize="@dimen/t19"
        app:np_textSize="@dimen/t16"
        app:np_wheelItemCount="3"
        app:np_wrapSelectorWheel="true" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d20"
        android:layout_marginEnd="@dimen/d20"
        app:np_dividerColor="@color/colorAccent"
        app:np_dividerThickness="@dimen/d3"
        app:np_formatter="@string/npf"
        app:np_min="1"
        app:np_selectedTextSize="@dimen/t19"
        app:np_textSize="@dimen/t16"
        app:np_wheelItemCount="3"
        app:np_wrapSelectorWheel="true" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:np_dividerColor="@color/colorAccent"
        app:np_dividerThickness="@dimen/d3"
        app:np_selectedTextSize="@dimen/t19"
        app:np_textSize="@dimen/t16"
        app:np_wheelItemCount="3"
        app:np_wrapSelectorWheel="true" />

</LinearLayout>